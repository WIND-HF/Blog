<h1>New Article</h1>

<%= form_for :article, url: home_index_path, method: 'POST' do |f| %>
  <p>
    <%= Time.now() %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :auth %><br>
    <%= f.text_field :auth %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
